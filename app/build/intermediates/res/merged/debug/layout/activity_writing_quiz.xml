<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundApp"
    tools:context="com.exapmle.android.englishlearning.WritingQuizActivity">
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wordCounter"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-light"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wordToTranslate"
            android:textSize="32sp"
            android:textAlignment="center"
            android:textColor="#000"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="6dp"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Translate word above"
            android:layout_marginBottom="6dp"
            android:inputType="text"
            android:id="@+id/translatedWord"
            android:focusable="true"/>
        <Button
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="submit"
            android:id="@+id/submitButton"
            android:layout_marginBottom="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="36sp"
            android:id="@+id/correctOrWrong"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:textColor="#000"
            android:id="@+id/correctAnswer"/>

    </LinearLayout>

</RelativeLayout>
